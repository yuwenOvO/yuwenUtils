{
	"compilerOptions": {
		"composite": true, // 开启项目编译
		"incremental": true, // 开启增量编译
		"tsBuildInfoFile": "./dist/.tsbuildinfo", // 增量编译的信息文件

		"declaration": true, // 生成声明文件
		"declarationMap": true, // 生成声明文件的映射文件
		"emitDeclarationOnly": true, // 只生成声明文件
		"noEmitOnError": true, // 有错误时不生成文件
		"skipLibCheck": true, // 跳过声明文件检查

		"esModuleInterop": true, // 生成的模块使用 es6 的 export = 语法
		"allowSyntheticDefaultImports": true, // 允许从没有设置默认导出的模块中默认导入

		"resolveJsonModule": true, // 支持导入 json 文件
		"strict": true // 开启所有严格类型检查
	},
	"exclude": ["node_modules", "dist"]
}
