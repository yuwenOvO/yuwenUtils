{
	"compilerOptions": {
		"target": "es2017",
		"lib": ["ESNext", "DOM"],
		"module": "ESNext",
		"moduleResolution": "Node",
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"noUnusedParameters": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"resolveJsonModule": true
	},
	"exclude": ["**/dist", "**/node_modules"]
}
